{
	"manifest_version": 3,
	"name": "WebPlayer UI Remover",
	"version": "0.5.0",
	"description": "One Click Extension for removing WebPlayer UIs of specific Streaming Sites for an undisturbed Viewer Experience",
	"action": {
		"default_title": "WebPlayer UI Remover"
	},
	"icons": {
		"512": "./src/icon/wpuirem.png"
	},
	"content_scripts": [
		{
			"matches": ["*://*.amazon.de/*", "*://*.netflix.com/*", "*://*.disneyplus.com/*", "*://*.wowtv.de/*"],
			"js": ["./src/wpuirem.js"]
		}
	],
	"background": {
		"scripts": ["./src/bg.js"],
		"type": "module"
	},
	"permissions": ["activeTab", "scripting"],
	"browser_specific_settings": {
		"gecko": {
			"id": "{96b7edf5-6cde-4584-80b1-dce853361ebe}"
		}
	}
}
